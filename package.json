{
  "name": "vite-plugin-vue-i18n-typescript",
  "version": "1.0.2",
  "description": "Type-safe Vue i18n translations. Auto-generates TypeScript types from JSON locale files. Catch translation errors at compile time with full IDE autocomplete.",
  "keywords": [
    "vite",
    "vite-plugin",
    "vue-i18n",
    "typescript",
    "i18n",
    "vue3",
    "vue",
    "types",
    "type-generation",
    "localization",
    "translation-keys",
    "internationalization",
    "type-safe",
    "compile-time-validation",
    "autocomplete",
    "intellisense",
    "hmr",
    "hot-reload"
  ],
  "homepage": "https://github.com/gcwioro/vite-plugin-vue-i18n-typescript#readme",
  "bugs": {
    "url": "https://github.com/gcwioro/vite-plugin-vue-i18n-typescript/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gcwioro/vite-plugin-vue-i18n-typescript.git"
  },
  "license": "MIT",
  "author": "GÃ¼nther Cwioro",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./api": {
      "types": "./dist/api.d.ts",
      "import": "./dist/api.js",
      "require": "./dist/api.cjs"
    },
    "./plugin": {
      "types": "./dist/plugin.d.ts",
      "import": "./dist/plugin.js",
      "require": "./dist/plugin.cjs"
    },
    "./package.json": "./package.json",
    "./i18n-types": {
      "types": "./src/virtual.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "vue-i18n-dts": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "dev:debug": "tsup --watch --sourcemap inline",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "release": "npm run build && npm publish",
    "test": "vitest"
  },
  "peerDependencies": {
    "vite": ">=4.0.0 || ^7.0.0"
  },
  "peerDependenciesMeta": {},
  "dependencies": {
    "fast-glob": "^3.3.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/node": "^24.8.1",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "chokidar": "^4.0.3",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.10",
    "vitest": "^3.2.4",
    "vue-i18n": "^11.1.12",
    "vue-tsc": "^3.1.1"
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
