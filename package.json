{
  "name": "vite-plugin-vue-i18n-typescript",
  "version": "1.2.2",
  "description": "Type-safe Vue i18n translations. Auto-generates TypeScript types from JSON locale files. Catch translation errors at compile time with full IDE autocomplete.",
  "keywords": [
    "vite",
    "vite-plugin",
    "vue-i18n",
    "typescript",
    "i18n",
    "vue3",
    "vue",
    "types",
    "type-generation",
    "localization",
    "translation-keys",
    "internationalization",
    "type-safe",
    "compile-time-validation",
    "autocomplete",
    "intellisense",
    "hmr",
    "hot-reload"
  ],
  "homepage": "https://github.com/gcwioro/vite-plugin-vue-i18n-typescript#readme",
  "bugs": {
    "url": "https://github.com/gcwioro/vite-plugin-vue-i18n-typescript/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gcwioro/vite-plugin-vue-i18n-typescript.git"
  },
  "license": "MIT",
  "author": "GÃ¼nther Cwioro",
  "type": "module",
  "exports": {
    ".": {
      "types": [
        "./dist/index.d.ts",
        "./dist/index.d.cts"
      ],
      "import": "./dist/index.js",
      "node": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./api": {
      "types": [
        "./dist/api.d.ts",
        "./dist/api.d.cts"
      ],
      "import": "./dist/api.js",
      "require": "./dist/api.cjs"
    },
    "./plugin": {
      "types": [
        "./dist/plugin.d.ts",
        "./dist/plugin.d.cts"
      ],
      "import": "./dist/plugin.js",
      "require": "./dist/plugin.cjs"
    },
    "./vite-env-override-components": {
      "types": "./dist/vite-env-override-components"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/vite-env-override-components.d.ts",
  "bin": {
    "i18n-typescript": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup --tsconfig tsconfig.json --clean",
    "dev": "tsup --watch",
    "dev:debug": "tsup --watch --sourcemap inline",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "release": "npm run build && npm publish",
    "test": "vitest"
  },
  "peerDependencies": {
    "vite": ">=4.0.0 || ^7.0.0"
  },
  "peerDependenciesMeta": {},
  "dependencies": {
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-vue": "~10.4.0",
    "fast-glob": "^3.3.3",
    "@vue/language-server": "^3.1.1",
    "@intlify/devtools-types": "^11.1.12",
    "vue-i18n": "^11.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@microsoft/api-extractor": "^7.53.3",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitejs/plugin-vue": "^6.0.1",
    "chokidar": "^4.0.3",
    "eslint": "^9.38.0",
    "globals": "^16.4.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.1.1"
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
